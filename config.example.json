{
  "newspaper": {
    "title": "Daily AI",
    "publication_date_format": "%A, %B %d, %Y",
    "pages": 5,
    "stories_per_page": 5,
    "description": "Daily digest of AI news from HackerNews and major AI labs"
  },
  "scraper": {
    "hackernews": {
      "enabled": true,
      "api": "https://hacker-news.firebaseio.com/v0",
      "story_limit": 30,
      "timeout": 10
    },
    "rss_feeds": {
      "enabled": true,
      "feeds": {
        "openai": "https://openai.com/feed.xml",
        "anthropic": "https://www.anthropic.com/feed.xml",
        "deepmind": "https://deepmind.google/feed.xml",
        "metaai": "https://ai.meta.com/feed.xml",
        "arxiv_ai": "http://arxiv.org/rss/cs.AI",
        "arxiv_lg": "http://arxiv.org/rss/cs.LG",
        "arxiv_cv": "http://arxiv.org/rss/cs.CV"
      },
      "stories_per_feed": 5,
      "timeout": 10
    }
  },
  "processor": {
    "llm": {
      "primary": "meta-ai",
      "fallback": "gemini",
      "categorization_confidence_threshold": 0.7,
      "timeout": 30
    },
    "categories": [
      "Front Page Headlines",
      "LLMs & Foundation Models",
      "World Models & Vision",
      "AI Labs & Companies",
      "Speculations & Deep Tech"
    ],
    "ai_keywords": [
      "ai", "llm", "language model", "transformer", "neural",
      "machine learning", "deep learning", "gpt", "claude",
      "gemini", "llama", "ml", "nlp", "vision", "robotics"
    ]
  },
  "exporter": {
    "formats": ["html", "json", "markdown", "rss"],
    "output_directory": "./output/current",
    "image_directory": "./output/images",
    "include_images": true,
    "include_metadata": true
  },
  "deployment": {
    "github_actions": {
      "enabled": true,
      "schedule": "0 8 * * *",
      "auto_commit": true,
      "auto_push": true
    },
    "netlify": {
      "enabled": false,
      "publish_directory": "output/current",
      "auto_deploy": true
    },
    "github_pages": {
      "enabled": false,
      "branch": "main",
      "path": "output/current"
    }
  },
  "frontend": {
    "theme": "dark",
    "colors": {
      "primary": "#00d4ff",
      "dark": "#1a1a2e",
      "darker": "#0f0f1e",
      "accent": "#533483",
      "light": "#f8f9fa"
    },
    "animations": {
      "page_flip_duration": 0.6,
      "page_flip_easing": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    "fonts": {
      "heading": "'Georgia', serif",
      "body": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif"
    }
  }
}
