# Gemini API Key (required for image generation and LLM fallback)
GEMINI_API_KEY=your_gemini_api_key_here

# Meta-AI (optional, will fallback to Gemini if not provided)
META_AI_COOKIE=your_meta_ai_cookie_here

# Netlify Configuration (optional for deployment)
NETLIFY_AUTH_TOKEN=your_netlify_auth_token
NETLIFY_SITE_ID=your_netlify_site_id

# Email Configuration (optional for subscribe feature)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# OpenAI (optional, if you want to use GPT for summaries)
# OPENAI_API_KEY=your_openai_api_key
